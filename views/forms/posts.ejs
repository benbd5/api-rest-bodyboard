<%- include('../partials/header') %>

<h2 class="">Ajouter un article</h2>
<form action="/posts" method="POST" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col">
                <label for="name">Nom de l'article</label>
                <input class="form-control" type="text" name="name" id="name">
            </div>
        </div>
        <div class="row">
            <label class="file-label">
                <input class="file-input" type="file" name="image">
                <span class="file-cta">
                    <span class="file-icon">
                        <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label" class="form-control">
                        Choisir une image
                    </span>
                </span>
            </label>
        </div>
        <div class="row">
            <div class="col">
                <label for="price">Prix</label>
                <input class="form-control" type="text" name="price" id="price">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <select class="form-select" name="category" id="category">
                    <option selected>Choisir la cat√©gorie</option>
                    <option value="bodyboard">Bodyboard</option>
                    <option value="palmes">Palmes</option>
                    <option value="combinaisons">Combinaisons</option>
                    <option value="accessoires">Accessoires</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <label for="infos">Informations</label>
                <textarea class="form-control" type="text" name="infos" id="infos">

                </textarea>
            </div>
        </div>
        <a class="btn btn-danger" href="/">Annuler</a>
        <button class="btn btn-primary" type="submit">Ajouter</button>
</form>