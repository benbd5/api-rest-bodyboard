<%- include('../partials/header') %>


<div class="container">
    <div class="row">
        <aside>
            <ul class="nav-articles">
                <li>
                    <a href="/palmes">Palmes</a>
                </li>
                <li>
                    <a href="/combinaisons">Combinaisons</a>
                </li>
                <li>
                    <a href="/accessoires">Accessoires</a>
                </li>
            </ul>
        </aside>
    </div>
</div>
<div class="container">
    <div class="row">
        <p>Total articles: <%= articlesTotal %> </p>
        <% articles.forEach(article =>  { %>
        <% if ( article.category == "bodyboard") { %>
        <div class="col">
            <div class="card modif">
                <a href="/articles/<%= article.id %> ">
                    <img src="<%= article.image %> " class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <h3 class="card-title"><%= article.name %></h3>
                    <p class="card-text"><%= article.infos %> </p>
                    <p class="price-articles"> <%= article.price %> € </p>
                    <p class="category"> Catégorie : <%= article.category %> </p>
                </div>
                <div class="card-body">
                    <a href="#" class="btn btn-primary">Ajouter au panier</a>
                </div>
            </div>

            <% if (user) { %>
            <div class="container">
                <div class="row">
                    <div class="col-6">
                        <%- include('../partials/editForm', { url: article.id }) %>
                    </div>
                    <div class="col-6">
                        <%- include('../partials/deleteForm', { url: `/articles/${article.id}` }) %>
                    </div>
                </div>
            </div>
            <% } %>

        </div>
        <% } %>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer') %>