<%- include('../partials/header') %>

<div class="container">
    <div class="form-check">
        <!-- TODO : Changer les id et les for -->
        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
            Default checkbox
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
        <label class="form-check-label" for="flexCheckChecked">
            Checked checkbox
        </label>
    </div>
</div>

<div class="container">
    <div class="row">
        <p>Total articles: <%= articlesTotal %> </p>
        <% articles.forEach(article =>  { %>
        <% if ( article.category == "combinaisons") { %>
        <div class="col">
            <div class="card" style="width: 18rem;">
                <a href="/articles/<%= article.id %> ">
                    <img src="<%= article.image %> " class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <h5 class="card-title"><%= article.name %></h5>
                    <p class="card-text"><%= article.infos %> </p>
                    <p> <%= article.price %> </p>
                    <p> <%= article.category %> </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">caractéristiques</li>
                    <li class="list-group-item">caractéristiques</li>
                    <li class="list-group-item">caractéristiques</li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link">Ajouter au panier</a>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col">
                        <%- include('../partials/editForm', { url: article.id }) %>
                        <%- include('../partials/deleteForm', { url: `/articles/${article.id}` }) %>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        <% }); %>
    </div>
</div>